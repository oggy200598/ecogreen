generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  MANAGER
  CUSTOMER
}

model User {
  id       String   @id @default(cuid())
  email    String   @unique
  name     String?
  role     Role     @default(CUSTOMER)
  sessions Session[]
}

model Session {
  id        String @id @default(cuid())
  userId    String
  user      User   @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
}
